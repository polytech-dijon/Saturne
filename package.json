  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "node server.js",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:dev": "docker-compose -f docker-compose.dev.yaml --env-file .env.local up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yaml --env-file .env.local up --build",
    "docker:prod": "docker-compose -f docker-compose.yaml up --build",
    "db:deploy": "docker exec -it saturne-dev sh -c \"npx prisma deploy\"",
    "db:migrate": "docker exec -it saturne-dev sh -c \"npx prisma migrate dev\"",
    "db:studio": "docker exec -it saturne-dev sh -c \"npx prisma studio\"",
    "db:seed": "docker exec -it saturne-dev sh -c \"npx prisma db seed\""
  },
